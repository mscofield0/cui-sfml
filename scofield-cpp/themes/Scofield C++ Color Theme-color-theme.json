{
	"name": "Scofield C++ Color Theme",
	"type": "dark",
	"colors": {
		"editor.background": "#282828",
		"editor.foreground": "#eeffff",
		"activityBarBadge.background": "#00cc52",
		"sideBarTitle.foreground": "#bbbbbb",
		"activityBar.activeBorder": "#FFD700",
		"activityBar.foreground": "#FFD700",
		"activityBar.inactiveForeground": "#bbbbbb",
		"activityBarBadge.foreground": "#feffff",
		"tab.activeBackground": "#282828",
		"tab.activeForeground": "#ffd900ab",
		"tab.border": "#404040",
		"tab.activeBorder": "#ffd700",
		"tab.inactiveForeground": "#AAAAAA",
		"tab.activeModifiedBorder": "#4169e1",
		"editorLineNumber.foreground": "#ffd900ab",
		"editorLineNumber.activeForeground": "#ffd700",
		"titleBar.border": "#4169e1"
	},
	"tokenColors": [
		{
			"name": "Keywords",
			"scope": [
				"storage.type",
				"storage.modifier",
				"keyword.operator.noexcept",
				"keyword.control",
				"keyword",
				"keyword.operator.new",
				"keyword.operator.expression",
				"keyword.operator.cast",
				"keyword.operator.sizeof",
				"keyword.operator.alignof",
				"keyword.operator.typeid",
				"keyword.operator.alignas",
				"keyword.operator.instanceof",
				"keyword.operator.logical.python",
				"keyword.operator.wordlike"
			],
			"settings": {
				"foreground": "#e26c72"
			}
		},
		{
			"name": "String literals",
			"scope": [
				"string",
				"entity.name.operator.custom-literal.string",
				"meta.embedded.assembly"
			],
			"settings": {
				"foreground": "#a5a16a"
			}
		},
		{
			"name": "Operator symbols",
			"scope": "keyword.operator",
			"settings": {
				"foreground": "#030202"
			}
		},
		{
			"name": "Constant literals",
			"scope": [
				"constant.numeric",
				"constant.other",
				"constant.language",
				"entity.name.operator.custom-literal.number",
				"keyword.other.unit"
			],
			"settings": {
				"foreground": "#b172f0"
			}
		},
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#6A6864"
			}
		},
		{
			"name": "Types declaration and references",
			"scope": [
				"entity.other.attribute",
				"entity.name.scope-resolution",
				"entity.name.class",
				"entity.name.type.class.templated",
				"entity.name",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#d3b980"
			}
		},
		{
			"name": "Namespace",
			"scope": "entity.name.namespace",
			"settings": {
				"foreground": "#bd8c22",
			}
		},
		{
			"name": "Variable and parameter name",
			"scope": [
				"variable",
				"variable.other.global",
				"variable.other.local",
				"meta.definition.variable.name",
				"support.variable",
				"entity.name.variable",
				"variable.other.property.static",
				"variable.parameter"
			],
			"settings": {
				"foreground": "#849692"
			}
		},
		{
			"name": "Escape characters",
			"scope": "constant.character",
			"settings": {
				"foreground": "#448ee2",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Enum member",
			"scope": "variable.other.enummember",
			"settings": {
				"foreground": "#c9a0ff"
			}
		},
		{
			"name": "Braces",
			"scope": [
				"punctuation",
				"keyword.operator"
			],
			"settings": {
				"foreground": "#a88842"
			}
		},
		{
			"name": "Functions",
			"scope": [
				"entity.name.function",
				"entity.name.function.templated",
				"entity.name.function.member",
				"entity.name.function.member.static"
			],
			"settings": {
				"foreground": "#aab46e"
			}
		},
		{
			"name": "Macros",
			"scope": [
				"entity.name.function.preprocessor"
			],
			"settings": {
				"foreground": "#da7cca"
			}
		},
		{
			"name": "Member fields",
			"scope": [
				"variable.other.property"
			],
			"settings": {
				"foreground": "#57c0ce"
			}
		}
	]
}